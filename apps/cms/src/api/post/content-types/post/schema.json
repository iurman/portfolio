{
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Blog posts for the portfolio site"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "body": {
      "type": "text"
    },
    "excerpt": {
      "type": "string"
    },
    "publishDate": {
      "type": "date",
      "required": true
    }
  }
}
